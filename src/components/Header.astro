<style>
header {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Container for hover effect */
.hover-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 250px; /* Adjust width as needed */
  height: 250px; /* Adjust height as needed */
  overflow: hidden; /* Hide any overflow */
}

/* Styling for the SVG */
#hearth {
  width: 100%; /* Make the SVG fill its container */
  height: 100%; /* Make the SVG fill its container */
  transform-origin: center center; /* Center for animations */
  transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transition */
  z-index: 1; /* Ensure the heart is behind the title */
}

#XMLID_5_ {
  transform-origin: center center;
  animation: heartbeat 2s infinite linear;
}

/* Heartbeat animation */
@keyframes heartbeat {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 rgba(255, 0, 0, 0);
  }
  20% {
    transform: scale(1.1);
    box-shadow: 0 0 8px rgba(255, 0, 0, 0.3);
  }
  40% {
    transform: scale(1.2);
    box-shadow: 0 0 12px rgba(255, 0, 0, 0.5);
  }
  60% {
    transform: scale(1.1);
    box-shadow: 0 0 8px rgba(255, 0, 0, 0.3);
  }
  80% {
    transform: scale(1.05);
    box-shadow: 0 0 6px rgba(255, 0, 0, 0.2);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 rgba(255, 0, 0, 0);
  }
}

/* Title styling */
.title {
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24px;
  color: #FF657B;
  text-align: center;
  opacity: 0;
  animation: fadeInScale 2s infinite;
  transition: color 0.3s ease, transform 0.3s ease; /* Smooth transitions */
  z-index: 2; /* Ensure the title is above the heart */
}

@keyframes fadeInScale {
  0% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.2);
  }
  100% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
}

/* Hover effects for the container */
.hover-container:hover #hearth {
  transform: scale(1.2); /* Slightly enlarge the heart */
}

.hover-container:hover .title {
  color: #76343d; /* Change color on hover */
  animation: none; /* Stop the fade-in animation */
  transform: translate(-50%, -50%) scale(1); /* Ensure the title stops scaling */
  opacity: 1; /* Make the title fully visible */
}
</style>
